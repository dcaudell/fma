<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TableLayout
    	android:id="@+id/eblistingsmenuitemTableLeft" 
    	android:layout_height="wrap_content" 
    	android:layout_alignParentLeft="true"     	 
    	android:layout_width="wrap_content">
        <TableRow 
        	android:id="@+id/eblistingsmenuitemTableLeftRow1" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content">
            <TextView 
            	android:id="@+id/eblistingsmenuitemTitle" 
            	android:layout_width="wrap_content"             	
            	android:layout_height="wrap_content"
            	android:paddingLeft="5dp"
            	android:textColor="@color/colorWhite"
            	android:text="A Wonderful Item"/>
        </TableRow>
        <TableRow 
        	android:id="@+id/eblistingsmenuitemTableLeftRow2" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content">
            <TextView 
            	android:id="@+id/eblistingsmenuitemLabelEnds" 
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content" 
            	android:text="Ends: Soon!" 
            	android:paddingLeft="5dp"/>            
        </TableRow>
    </TableLayout>
    <TableLayout 
    	android:layout_alignParentRight="true" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/eblistingsmenuitemTableRight" 
    	android:layout_width="wrap_content">
        <TableRow 
        	android:id="@+id/eblistingsmenuitemTableRightRow1" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content">
            <TextView 
            	android:id="@+id/eblistingsmenuitemPrice" 
            	android:layout_width="wrap_content"             	
            	android:layout_height="wrap_content"
            	android:paddingRight="5dp"
            	android:text="$0.00"/>
        </TableRow>
        <TableRow 
        	android:id="@+id/eblistingsmenuitemTableRightRow2" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content">            
            <TextView             	
            	android:layout_width="wrap_content" 
            	android:id="@+id/eblistingsmenuitemBids" 
            	android:layout_height="wrap_content"
            	android:text="0 Bids"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
