<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TableLayout
    	android:id="@+id/eblistingsmenuitemTableLeft" 
    	android:layout_height="wrap_content" 
    	android:layout_alignParentLeft="true"     	 
    	android:layout_width="fill_parent">
        <TableRow 
        	android:id="@+id/eblistingsmenuitemTableLeftRow1" 
        	android:layout_width="fill_parent" 
        	android:layout_height="wrap_content">
            <TextView 
            	android:id="@+id/eblistingsmenuitemTitle" 
            	android:layout_width="wrap_content"             	
            	android:layout_height="wrap_content"
            	android:paddingLeft="5dp"
            	android:textColor="@color/colorWhite"
            	android:layout_weight="1"/>
            <LinearLayout 
            	android:id="@+id/eblistingsmenuLayoutTitle" 
            	android:orientation="vertical" 
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content" 
            	android:minWidth="45dp" 
            	android:gravity="right">
                <TextView                 	
                	android:id="@+id/eblistingsmenuitemPrice" 
                	android:layout_width="wrap_content" 
                	android:layout_height="wrap_content" 
                	android:layout_gravity="right"/>
                <TextView 
                	android:id="@+id/eblistingsmenuitemBids"
                	android:layout_width="wrap_content" 
                	android:layout_height="wrap_content"
                	android:layout_gravity="right"/>
            </LinearLayout>
        </TableRow>
        <TableRow 
        	android:id="@+id/eblistingsmenuitemTableLeftRow2" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content">
            <TextView 
            	android:id="@+id/eblistingsmenuitemEnds"
            	android:layout_height="wrap_content" 
            	android:layout_width="wrap_content" 
            	android:paddingLeft="5dp"/>            
        </TableRow>
    </TableLayout>
</RelativeLayout>
